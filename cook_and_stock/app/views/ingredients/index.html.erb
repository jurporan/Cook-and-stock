<% if flash[:notice] %>
  <div class="alert alert-success notice fade in">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <strong>Success!</strong> <%= notice %>
  </div>
<% end %>

<h1>Listing Ingredients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td>
          <%= link_to 'Show', ingredient_path(ingredient), :class => "btn btn-sm btn-default" %>
          <%= link_to 'Edit', edit_ingredient_path(ingredient), :class => "btn btn-sm btn-default" %>
          <%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-sm btn-default" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Ingredient', new_ingredient_path, :class => "btn btn-success" %>
