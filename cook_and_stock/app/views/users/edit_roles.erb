<h2>Specification des roles jou√©s par <%= @user.firstname %> <%=@user.lastname %> </h2>
<%= form_for(@user, :url => save_roles_user_path(@user), method: :put) do |f| %>
    <% for role in Role.all %>
        <div class="checkbox">
          <label>
            <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role) %>
            <%= role.name %>
          </label>
        </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Sauvegarder", :class => "btn btn-success" %>
    </div>
    <%= link_to 'Back', users_path, :class => "btn btn-default" %>
<% end %>