<p id="notice"><%= notice %></p>

<h1>Listing Ingredient Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Ingredient</th>
      <th>Stock</th>
      <th>Quantity</th>
      <th>Quantity unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_stocks.each do |ingredient_stock| %>
      <tr>
        <td><%= ingredient_stock.ingredient_id %></td>
        <td><%= ingredient_stock.stock_id %></td>
        <td><%= ingredient_stock.quantity %></td>
        <td><%= ingredient_stock.quantity_unit %></td>
        <td><%= link_to 'Show', ingredient_stock %></td>
        <td><%= link_to 'Edit', edit_ingredient_stock_path(ingredient_stock) %></td>
        <td><%= link_to 'Destroy', ingredient_stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

