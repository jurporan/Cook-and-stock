<h1>Add ingredient</h1>
<%= form_for :dish_ingredients, :url => create_ingredient_dish_path(@dish), :method => :post do |f| %>

<div class="field">
<%= f.label 'Ingredient' %><br>
<%= f.collection_select :ingredient_id, Ingredient.all, :id, :name %>
</div>
<div class="field">
  <%= f.label 'Quantity' %><br>
  <%= f.text_field :quantity, :class => "form-control" %>
</div>
<div class="field">
  <%= f.label 'Quantity unit' %><br>
  <%= f.text_field :quantity_unit, :class => "form-control" %>
</div>
<div class="actions">
  <%= f.submit :class => "btn btn-success" %>
</div>
<%end%>
