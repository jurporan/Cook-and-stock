<%= form_for(@dish) do |f| %>
  <% if @dish.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dish.errors.count, "error") %> prohibited this dish from being saved:</h2>

      <ul>
      <% @dish.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :directions %><br>
    <%= f.text_area :directions, :class => "form-control" %>
  </div>
  Ingredients
  <table class="table">
      <thead>
          <th>Name</th>
          <th>Quantity</th>
          <th>Unit</th>
          <th>Update</th>
          <th>Delete</th>
      </thead>
      <tbody>
          <% @dish.dish_ingredients.each do |ingr| %>
          <tr>
              <td><%=ingr.ingredient.name%></td>
              <td><%=ingr.quantity%></td>
              <td><%=ingr.quantity_unit%></td>
              <td><%=link_to "Update", add_ingredient_dish_path(@dish), id: ingr.id, :method => :put%></td>
              <td><%=link_to "Delete", delete_ingredient_dish_path(@dish)%></td>
          </tr>
          <%end%>
      </tbody>
  </table>

  <div class="actions">
    <%= f.submit :class => "btn btn-success" %>
  </div>
<% end %>
