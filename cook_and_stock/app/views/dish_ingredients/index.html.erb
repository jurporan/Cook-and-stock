<p id="notice"><%= notice %></p>

<h1>Listing Dish Ingredients</h1>

<table class="table">
  <thead>
    <tr>
      <th>Dish</th>
      <th>Ingredient</th>
      <th>Quantity</th>
      <th>Quantity unit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dish_ingredients.each do |dish_ingredient| %>
      <tr>
        <td><%= dish_ingredient.dish_id %></td>
        <td><%= dish_ingredient.ingredient_id %></td>
        <td><%= dish_ingredient.quantity %></td>
        <td><%= dish_ingredient.quantity_unit %></td>
        <td><%= link_to 'Show', dish_ingredient %></td>
        <td><%= link_to 'Edit', edit_dish_ingredient_path(dish_ingredient) %></td>
        <td><%= link_to 'Destroy', dish_ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

